{
  "name": "s-typescript-express-microservice",
  "version": "1.0.0",
  "description": "A starter project skeleton for a express based microservice in typescript.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/maandr/s-typescript-express-microservice"
  },
  "author": "Mats Andresen <mats.andresen@gmx.de>",
  "license": "MIT",
  "docker-user": "maandr",
  "docker-container-name": "microservice_starter",
  "scripts": {
    "refresh": "rm -rf node_modules && yarn install",
    "clean": "rimraf dist coverage .nyc_output yarn-error.log application.log",
    "prebuild": "yarn clean",
    "build": "npx tsc",
    "prestart": "yarn build",
    "start": "cross-env NODE_ENV=production node ./dist/src/main.js",
    "prestart:dev": "yarn build",
    "start:dev": "cross-env NODE_ENV=development node ./dist/src/main.js",
    "test": "cross-env NODE_ENV=test npx mocha",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=text npx mocha",
    "publish-coverage": "nyc report --reporter=text-lcov | coveralls",
    "docker-build": "./scripts/docker-build.sh",
    "docker-up": "./scripts/docker-run.sh -d -p 9001:9001",
    "docker-down": "./scripts/docker-remove.sh -fv",
    "docker-push": "./scripts/docker-push.sh"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "config": "^1.30.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "js-yaml": "^3.11.0",
    "multer": "^1.3.0",
    "mysql": "^2.15.0",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/config": "^0.0.34",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.11.1",
    "@types/mocha": "^2.2.48",
    "@types/multer": "^1.3.6",
    "@types/mysql": "^2.15.3",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.9",
    "awesome-typescript-loader": "^4.0.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "mocha": "^5.0.4",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-typescript": "^1.1.12",
    "mysql-migrations": "^1.0.4",
    "nyc": "^11.6.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "extension": [".ts", ".js"]
  }
}
